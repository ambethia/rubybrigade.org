<%- @title = "Editing Brigade" -%>
<div id="forms">
<% form_for(@brigade) do |f| %>
  <% content_for :show_and_delete do %>

    <%= link_to 'Show', @brigade, {:class => "show-button"} %>
    <%= link_to 'Delete', brigade_destroy_path(@brigade), {:class => "delete-button"} %>

  <% end %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <div id="primary"><%= yield :primary  %></div>
  <div id="secondary"><%= yield :secondary  %></div>
<% end %>
</div>