<fieldset>
  <legend>Basics</legend>

  <p>Name<br />
  <%= f.text_field 'name' %></p>

  <p>Description<br />
  <%= f.text_area 'description', :rows => 10 %></p>

  <p>Subdomain<br />
  <%= f.text_field 'subdomain' %></p>

  <p>Membership Size<br />
  <%= f.text_field 'membership_size' %></p>

  <p>Website URL<br />
  <%= f.text_field 'website_url' %></p>

  <p>RSS URL<br />
  <%= text_field_tag "brigade[feeds][rss][uri]", @brigade.rss_feed.uri %></p>

  <p>iCal URL<br />
  <%= text_field_tag "brigade[feeds][ics][uri]", @brigade.calendar.uri %></p>

  <p>Established<br />
  <%= f.date_select 'established_on' %></p>
</fieldset>


<fieldset>
  <legend>Location</legend>

  <p>City<br />
  <%= f.text_field 'city' %></p>

  <p>State or Region<br />
  <%= f.text_field 'state_region' %></p>

  <p>Country<br />
  <%= f.select 'country', @countries, :include_blank => true %></p>

  <p>Postal (ZIP) Code<br />
  <%= f.text_field 'postal_code' %></p>
</fieldset>

<%= recaptcha_tags %>